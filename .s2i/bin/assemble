#!/bin/bash -e

echo "---> (save-artifacts) Restoring saved artifacts from prior build ..."
cp -Rf /tmp/artifacts/. ./

echo "---> (save-artifacts) Copying application source ..."
cp -Rf /tmp/src/. ./

echo "---> (save-artifacts) Installing dependencies ..."
pip install --user -r requirements.txt

# Fix source directory permissions
fix-permissions ./
# set permissions for any installed artifacts
fix-permissions /opt/app-root

# remove pip temporary directory
rm -rf /tmp/pip_build_default
